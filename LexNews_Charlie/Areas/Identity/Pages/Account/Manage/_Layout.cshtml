@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<h1 class="m-4 ms-3">Manage your account</h1>

<div class="col">
    <h2 class="m-3  ms-4">Change your account settings</h2>
    <hr class="w-25 ms-4"style="border-bottom:red 10px solid">
    
    <div class="col-md-6 ms-4">
        <div class="col-sm- ms-4">
            @RenderBody()
        </div>
        <div class="col-md-6 ms-4"style="border-radius: 3px">
            <partial name="_ManageNav"/>
        </div>
      
    </div>
  
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
