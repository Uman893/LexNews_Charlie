@model IEnumerable<string>

<h1> Roles List</h1>

<table class="table table-bordered w-25">
    <thead>
        <tr>
            <th> Name </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item
                </td>
                <td>
                    <a class="nav-link" asp-area="" asp-controller="Role" asp-action="Delete" asp-route-name="@item" class="btn btn-outline-warning">Delete</a>
                </td>                
            </tr>
        }
    </tbody>
</table>
<a class="nav-link" asp-area="" asp-controller="Role" asp-action="AddRole" class="btn btn-primary">Add a new role!</a>





