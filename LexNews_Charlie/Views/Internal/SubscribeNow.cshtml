@model LexNews_Charlie.Models.ViewModels.SubscriptionTypeVM
<form asp-controller="Internal" asp-action="SubscribeNow" method="post";>
    <div class="container-fluid m-4" style="background-color:aliceblue;border: #b69e17 2px solid;width:77%;height:65%">

        <h1>Get access to more content</h1>
        <h3>Start your subscription now. It's easy - just choose subscription and fill in your details. Subscription will start asap!</h3>
        <h3>Choose subscription</h3>
        <div class="col-md-3">
            <div class="mb-3">
                <label class="form-label">Select SubscriptionType</label>
                <select class="form-select" asp-items="Model.SubscriptionTypesList" asp-for="SelectedSubscriptionType">
                    <option value="NOSELECTEDVALUE">-- Please select a SubscriptionType --</option>
                </select>
            </div>
            <div>
                <button type="button" class="btn btn-primary" id="Mybtn">Initialize Payment</button>

            </div>
        </div>
    </div>

    <section class="gradient-custom" id="Payment" style="display: none;">
        <div class="container-fluid">
            <div class="row d-flex justify-content-left py-5">
                <div class="col-md-7 col-lg-5 col-xl-4">
                    <div class="card" style="border-radius: 15px;background-color:darkgoldenrod;">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-outline">
                                    <input asp-for="CardNumber" type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                           placeholder="1234 5678 9012 3457" minlength="16" maxlength="19" />
                                    <label asp-for="CardNumber" class="form-label" for="typeText">Card Number</label>
                                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                                </div>
                                <img src="https://img.icons8.com/color/48/000000/visa.png" alt="visa" width="64px" />
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-outline">
                                    <input asp-for="CardHoldersName" type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                           placeholder="Cardholder's Name" />
                                    <label asp-for="CardHoldersName" class="form-label" for="typeName">Cardholder's Name</label>
                                    <span asp-validation-for="CardHoldersName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center pb-2">
                                <div class="form-outline">
                                    <input asp-for="ExpirationDate" type="text" id="typeExp" class="form-control form-control-lg" placeholder="MM/YYYY"
                                           size="7" id="exp" minlength="5" maxlength="7" />
                                    <label asp-for="ExpirationDate" class="form-label" for="typeExp">Expiration</label>
                                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                                </div>
                                <div class="form-outline">
                                    <input asp-for="CVV" type="password" id="typeText2" class="form-control form-control-lg"
                                           placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" />
                                    <label asp-for="CVV" class="form-label" for="typeText2">Cvv</label>
                                    <span asp-validation-for="CVV" class="text-light"></span>
                                </div>
                                <button type="submit" class="btn btn-primary" asp-controller="Internal" asp-action="CompleteSubscription">Complete Payment</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts {   
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

    <script>
        $("#Mybtn").click(function () {
            console.log($("#SelectedSubscriptionType").val());
            if ($("#SelectedSubscriptionType").val() === "NOSELECTEDVALUE") {
                return;
            }
            $("#Payment").show();
        });
    </script>