<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LexNews_Charlie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LexNews_Charlie.styles.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
</head>
<body>
    <header class="header">  
        <div class="nav-1">
            <nav class="navbar navbar-expand-sm justify-content-end">
                <form method="post" action="/process-form">
                    <div class="searchBox">
                        <input class="searchInput" type="text" name="searchInput" placeholder="Search">
                        <button class="searchButton" type="submit" asp-controller="Home" asp-action="NewsFilter" asp-route-searchInput="value">
                            <i class="bi bi-search"> </i>
                        </button>
                    </div>
                </form>
                <partial name="_LoginPartial" />
            </nav>
        </div>
        <div class=" brand-n">
            <a class=" col-7 nav-link " asp-area="" asp-controller="Home" asp-action="Index">
                <img class="logo-n-m mt-2" src="~/images/17169544_transparent (11) (1).png">  </a>
         </div>             
        <vc:menu-categories></vc:menu-categories>
    </header>
    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="25" viewBox="0 0 1300 13" preserveAspectRatio="none"
         stroke="#DCDCDC" stroke-width="1" aria-hidden="true" focusable="false" class="dcr-65xb9q">
        <line x1="0" x2="1300" y1="0.5" y2="0.5"></line>
        <line x1="0" x2="1300" y1="4.5" y2="4.5"></line>
        <line x1="0" x2="1300" y1="8.5" y2="8.5"></line>
        <line x1="0" x2="1300" y1="12.5" y2="12.5"></line>
    </svg>
    <div class="hliner"></div>
    <div class="" style="margin:0% 6% 0% 6%;border:2px red solid;">
        <partial name="_CookieConsent" />
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="container-fluid bg-black text-light "style="border-top:10px red solid;padding:30px;margin-top:2rem">
        <div class="row">
            <div class="col-md-4 ">
                <img src="~/images/17169544_transparent (10) (2).png"style="width:50%;" />              
            </div>
            <div class="col-md-4 ">
               <h4 > About us </h4> 
               <hr />
               <p >
                    Breaking Charlie journalism provides its users and readers with in-depth information to assist them in making decisions on
                    a wide range of topics, namely: Education, Health, Money, News, Cars, Travel and 360 Reviews. Except where we specifically
                    discuss a particular topic, the following editorial guidelines apply to all of the above forms of our journalistic endeavors.
               </p>
            </div>
            <div class="col-md-4 " style="text-align:center;">
                <h4 >Contact us</h4>                
                <p>
                    <address>
                        <span>
                            Linköping Lexicon<br />
                            Charlie@News.se<br />
                            Contact Phone<br />
                            +4607956457687
                        </span>
                    </address>
                </p>
                <span class="icons ">
                    <i class="bi bi-twitter m-3"></i>
                    <i class="bi bi-instagram m-3"></i>
                    <i class="bi bi-facebook m-3"></i>
                </span>
            </div>
        </div>   
    </footer>    
    <footer class="footerconiner text-light bg-black  "style="border-top:2px white  solid; text-align:center;height:70px ">
        <h5 class="text-light ms-4 mt-3">&copy; @DateTime.Now.Year - Breaking_Charlie - <a asp-area="" asp-controller="Home" asp-action="Privacy"> Privacy</a></h5>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
